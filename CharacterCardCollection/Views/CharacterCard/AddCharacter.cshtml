@model CharacterCardCollection.Models.CharacterCard.CharacterModel

@{
    ViewData["Title"] = "Add Your Character";
}

<h1>Add Character</h1>

<form asp-controller="CharacterCard" asp-action="AddCharacter" method="post">
    <div class="mb-3">
        <label asp-for="@Model.Name">Name</label>
        <input type="text" asp-for="@Model.Name">
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Race">Race</label>
        <select asp-for="@Model.Race" asp-items="Html.GetEnumSelectList<CharacterCardCollection.Enums.Race>()"></select>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Class">Class</label>
        <select asp-for="@Model.Class"
            asp-items="Html.GetEnumSelectList<CharacterCardCollection.Enums.CharacterClass>()"></select>
    </div>

    <div>
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
</form>